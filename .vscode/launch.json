{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Chrome against localhost",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src",
        "sourceMaps": true,
        "skipFiles": ["node_modules/**"],
        "smartStep": true
      },
      {
        "name": "Attach to Chrome",
        "type": "chrome",
        "request": "attach",
        "port": 9222,
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src",
        "skipFiles": ["node_modules/**"]
      },
    ]
  }
  