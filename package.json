{
  "name": "orbiter-meta",
  "private": true,
  "workspaces": [
    "packages/orbiter"
  ],
  "scripts": {
    "start": "npm run start --workspace=example",
    "build:lib": "npm run build --workspace=orbiter",
    "watch:lib": "npm run watch --workspace=orbiter",
    "build:example": "npm run build --workspace=example",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "publish:lib": "npm publish --workspace=orbiter"
  },
  "devDependencies": {
    "typescript": "^4.9.5",
    "semantic-release": "24.1.0",
    "multi-semantic-release": "3.0.2",
    "semantic-release-monorepo-esm": "1.0.12"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  }
}