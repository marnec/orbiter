{
  "name": "orbiter-meta",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start --stream --scope=example",
    "build:lib": "lerna run build --stream --scope=orbiter",
    "watch:lib": "lerna run watch --stream --scope=orbiter",
    "build:example": "lerna run build --stream --scope=example",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream"
  },
  "devDependencies": {
    "lerna": "8.1.8",
    "lerna-changelog": "^2.2.0",
    "typescript": "^4.9.5"
  },
  "changelog": {
    "repo": "marnec/orbiter",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation"
    }
  }
}
